{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@ct/*":["./src/@constants/*"],
      "@ts/*":["./src/@types/*"],
      "@classes/*": ["./src/@classes/*"],
      "@components/*":["./src/components/*"],
      "@functions/*":["./src/@functions/*"],
      "@actions/*":["./src/@actions/*"],
      "@utils/*":["./src/@utils/*"],
      "@hooks/*":["./src/@hooks/*"],
      "@providers/*":["./src/providers/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
