{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es6",
    "module": "CommonJS",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@constants/*":["./src/@constants/*"],
      "@ts/*":["./src/@types/*"],
      "@classes/*": ["./src/@classes/*"],
      "@components/*":["./src/components/*"],
      "@functions/*":["./src/@functions/*"],
      "@actions/*":["./src/@actions/*"],
      "@utils/*":["./src/@utils/*"],
      "@hooks/*":["./src/hooks/*"],
      "@providers/*":["./src/providers/*"]
    }
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/app/_Layout.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
