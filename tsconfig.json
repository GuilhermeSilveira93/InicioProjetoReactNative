{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["./assets/*"],
      "@constants/*":["src/@constants/*"],
      "@classes/*": ["src/@classes/*"],
      "@components/*":["src/components/*"],
      "@actions/*":["src/@actions/*"],
      "@utils/*":["src/@utils/*"],
      "@hooks/*":["src/hooks/*"],
    }
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/app/_Layout.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
